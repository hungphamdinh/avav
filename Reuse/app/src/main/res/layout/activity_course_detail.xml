<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".CourseActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textFontWeight="bold"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="CourseDetail"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/detailLayout"
                android:background="@drawable/side_nav_bar"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#fff"
                    android:background="#000"
                    android:text="Title"
                    android:id="@+id/txtcourseNameDetail"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Price: "
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:id="@+id/txtCoursePriceDetail"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Detail: "
                    android:textStyle="italic"
                    android:textSize="20dp"
                    android:id="@+id/txtCourseDiscountDetai"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Descript: "
                    android:textSize="15dp"
                    android:id="@+id/txtCourseDiscriptDetail"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="Thông tin giảng viên"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="end"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgProfile"
                        android:layout_width="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/fbutton_color_emerald"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgStatus"
                        android:layout_gravity="end|right|bottom"
                        android:layout_width="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/imgProfile"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="10dp"
                        app:civ_border_color="#05df29"
                        android:layout_toRightOf="@id/imgProfile"
                        android:layout_toEndOf="@id/imgProfile"
                        />
                </FrameLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtUserNameTutorCourse"
                        android:textStyle="bold"
                        android:text="UserName"
                        android:layout_marginTop="6dp"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtEmailTutorCourse"
                        android:textStyle="italic"
                        android:text="4543534"
                        android:textColor="#000"
                        android:layout_marginTop="6dp"

                        />
                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/side_nav_bar"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:background="#000"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTitleTutor"
                        android:text="Kinh nghiệm giảng dạy"
                        android:layout_marginTop="6dp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtExpTutorCourse"
                        android:textStyle="italic"
                        android:text="4543534"
                        android:textColor="#000"
                        android:background="#fff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:background="#000"
                        android:layout_height="wrap_content"
                        android:text="Thời gian dạy học"
                        android:layout_marginTop="6dp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtScheduleTutor"
                        android:textStyle="italic"
                        android:text="4543534"
                        android:textColor="#000"
                        android:background="#fff"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:background="#000"
                        android:layout_height="wrap_content"
                        android:text="Tài liệu học"
                        android:layout_marginTop="6dp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCourseDoc"
                        android:textStyle="italic"
                        android:text="4543534"
                        android:textColor="#000"
                        android:background="#fff"
                        />
                    <Button
                        android:layout_marginTop="30dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#000"
                        android:text="Mua khóa học"
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:id="@+id/btnAddCart"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>